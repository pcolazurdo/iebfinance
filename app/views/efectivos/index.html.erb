<h1>Listing Efectivos</h1>

<table class="table table-hover table-stripped table-condensed table-bordered">
  <thead>
    <tr>
      <th><%= sortable_column_heading('Fecha','fecha asc') %> <%= resetsort_column_heading() %></th>
      <th>Pesos2</th>
      <th>Pesos5</th>
      <th>Pesos10</th>
      <th>Pesos20</th>
      <th>Pesos50</th>
      <th>Pesos100</th>
      <th>Pesosmonedas</th>
      <th>Dolares1</th>
      <th>Dolares2</th>
      <th>Dolares5</th>
      <th>Dolares10</th>
      <th>Dolares20</th>
      <th>Dolares50</th>
      <th>Dolares100</th>
      <th>Dolaresmonedas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @efectivos.each do |efectivo| %>
      <tr>
        <td><%= efectivo.fecha %></td>
        <td><%= efectivo.Pesos2 %></td>
        <td><%= efectivo.Pesos5 %></td>
        <td><%= efectivo.Pesos10 %></td>
        <td><%= efectivo.Pesos20 %></td>
        <td><%= efectivo.Pesos50 %></td>
        <td><%= efectivo.Pesos100 %></td>
        <td><%= efectivo.PesosMonedas %></td>
        <td><%= efectivo.Dolares1 %></td>
        <td><%= efectivo.Dolares2 %></td>
        <td><%= efectivo.Dolares5 %></td>
        <td><%= efectivo.Dolares10 %></td>
        <td><%= efectivo.Dolares20 %></td>
        <td><%= efectivo.Dolares50 %></td>
        <td><%= efectivo.Dolares100 %></td>
        <td><%= efectivo.DolaresMonedas %></td>
        <td><%= link_to efectivo, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-search"></span> Ver
          <% end %>
        </td>
        <td><%= link_to edit_efectivo_path(efectivo), class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-edit"></span> Modificar
          <% end %>
        </td>
        <td><%= link_to efectivo, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-remove"></span> Borrar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

