<p class="page-notice" id="notice"><%= notice %></p>

<h1>Cuentas</h1>

<table class="table table-hover table-stripped table-condensed table-bordered">
  <thead>
    <tr>
      <th><%= sortable_column_heading('Cuenta','cuenta asc') %> <%= resetsort_column_heading() %></th>
      <th>Subcuenta1</th>
      <th>Subcuenta2</th>
      <th>Subcuenta3</th>
      <th>Subcuenta4</th>
      <th>Subcuenta5</th>
      <th>Descripcion</th>
      <th><%= sortable_column_heading('Nombre','nombre asc') %> <%= resetsort_column_heading() %></th>
      <th>Estado</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas.each do |cuenta| %>
      <tr>
        <td><%= cuenta.cuenta %></td>
        <td><%= cuenta.subcuenta1 %></td>
        <td><%= cuenta.subcuenta2 %></td>
        <td><%= cuenta.subcuenta3 %></td>
        <td><%= cuenta.subcuenta4 %></td>
        <td><%= cuenta.subcuenta5 %></td>
        <td><%= cuenta.descripcion %></td>
        <td><%= cuenta.nombre %></td>
        <td><%= cuenta.estado %></td>
        <td><%= cuenta.tipo %></td>
        <td><%= link_to cuenta, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-search"></span> Ver
          <% end %>
        </td>
        <td><%= link_to edit_cuenta_path(cuenta), class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-edit"></span> Modificar
          <% end %>
        </td>
        <td><%= link_to cuenta, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-remove"></span> Borrar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

