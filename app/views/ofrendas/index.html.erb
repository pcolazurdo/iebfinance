<p class="page-notice" id="notice"><%= notice %></p>

<h1>Listing Ofrendas</h1>


<div class="row">
  <div class='col-sm-3'>
    <div class="form-group">
      <div class='input-group date' id='datetimepicker'>
        <input type='text' class="form-control" />
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker').datetimepicker({
        format: "dddd DD/MM/YYYY",
        showTodayButton: true,
        locale: "es"
      });
    });
  </script>
</div>



<%= list -%>




<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Montopesos</th>
      <th>Montodolares</th>
      <th>Escheque</th>
      <th>Idcheque</th>
      <th>Comentario</th>
      <th>Cuenta</th>
      <th>Miembro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ofrendas.each do |ofrenda| %>
      <tr>
        <td><%= ofrenda.fecha %></td>
        <td><%= ofrenda.montoPesos %></td>
        <td><%= ofrenda.montoDolares %></td>
        <td><%= ofrenda.esCheque %></td>
        <td><%= ofrenda.idcheque %></td>
        <td><%= ofrenda.comentario %></td>
        <td><%= ofrenda.cuenta_id %></td>
        <td><%= ofrenda.miembro_id %></td>
        <td><%= link_to 'Show', ofrenda %></td>
        <td><%= link_to 'Edit', edit_ofrenda_path(ofrenda) %></td>
        <td><%= link_to 'Destroy', ofrenda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

